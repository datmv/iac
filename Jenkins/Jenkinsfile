pipeline {
    agent any
    parameters {
        choice choices: ['dat-1', 'dat-2'], name: 'Name'
    }
    stages {
        stage('Show name') {
            steps {
                script {
                    if (choice.name == 'dat-1') {
                        echo 'Hello dat-1'
                    }  else {
                        sh "echo dat-2!'"
                    }
                    }
            }
        }
    }
}